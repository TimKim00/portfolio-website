name: Deploy React + Vite App to GitHub Pages

on:
  # Trigger the workflow on push to the 'main' branch or on manual trigger.
  push:
    branches:
      - main
  workflow_dispatch:

permissions:
  contents: read
  pages: write
  id-token: write

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      # Checkout the repository to the runner
      - name: Checkout code
        uses: actions/checkout@v4

      # Setup Node.js environment
      - name: Setup Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '20' # Use the version of Node.js you prefer

      # Install dependencies using npm
      - name: Install dependencies
        run: npm install

      # Build the React + Vite app
      - name: Build project
        run: npm run build

      # Upload the built site as an artifact for the deploy step
      - name: Upload artifact
        uses: actions/upload-pages-artifact@v3
        with:
          path: ./dist # The folder where Vite places the built files

  deploy:
    runs-on: ubuntu-latest
    needs: build
    permissions:
      pages: write
      id-token: write

    steps:
      # Download the artifact generated by the build job
      - name: Download artifact
        uses: actions/download-pages-artifact@v1

      # Deploy to GitHub Pages
      - name: Deploy to GitHub Pages
        uses: actions/deploy-pages@v4
